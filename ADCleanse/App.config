<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="CleanseConfiguration" type="ADCleanse.XmlSerializerSectionHandler,ADCleanse" />
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>      
    </configSections>
    <CleanseConfiguration type="ADCleanse.CleanseConfiguration,ADCleanse">
        <!-- leave Username blank to use integrated authentication -->
        <LdapRoot>LDAP://999.999.999.99</LdapRoot>
        <Username></Username>
        <Password></Password>
        <Filter>(&amp;(objectCategory=person)(objectClass=user))</Filter>
        <DryRun>true</DryRun>
        <Properties>
            <Property>
                <Name>co</Name>
                <Matches>
                    <Match>
                        <Pattern>^$</Pattern>
                        <Value>United Kingdom</Value>
                    </Match>
                    <Match>
                        <Pattern>UK</Pattern>
                        <Value>United Kingdom</Value>
                    </Match>
                    <Match>
                        <Pattern>United Kingdom</Pattern>
                        <Value>United Kingdom</Value>
                    </Match>
                </Matches>
            </Property>
        </Properties>
    </CleanseConfiguration>
    <log4net>
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="%date %-5level %logger - %message%newline"/>
            </layout>
        </appender>
        <appender name="FileAppender" type="log4net.Appender.FileAppender">
            <file value=".\ADCleanse.log"/>
            <appendToFile value="false"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
            </layout>
        </appender>
        <root>
            <level value="INFO"/>
            <appender-ref ref="ConsoleAppender"/>
            <appender-ref ref="FileAppender"/>
        </root>
    </log4net>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>